---
const {name, description, detail, image_url, url} = Astro.props;
---

<div class="collection-container flex gap-6 items-center">
    <div class="w-1/2">
        <img
            class="w-full h-full rounded-2xl" 
            src={image_url} 
            alt="" 
            draggable="false"            
        >
    </div>
    <div class="collection-text w-full">
        <h3 class="text-xl font-bold mb-2">{name}</h3>
        <p class="text-light-gray mb-4">{description}</p>
        <div class="collection-details flex justify-between items-center">
            <p class="text-light-gray text-sm">{detail}</p>
            <a href={url} class="text-gold-1 text-sm">
                Explorar
            </a>
        </div>
    </div>
</div>