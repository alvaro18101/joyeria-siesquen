---
const {name, description, detail, image_url, url} = Astro.props;
---

<div class="pb-4">
    <div class="mb-4 w-full h-[300px] overflow-hidden">
        <img
            class="w-full h-full rounded-2xl object-cover" 
            src={image_url} 
            alt="" 
            draggable="false"            
        >
    </div>
    <div>
        <h3 class="text-xl font-bold mb-2">{name}</h3>
        <p class="text-light-gray mb-4">{description}</p>
        <div class="flex justify-between items-center">
            <p class="text-light-gray text-sm">{detail}</p>
            <a href={url} class="text-gold-1 text-sm">
                Explorar
            </a>
        </div>
    </div>
</div>