---
const {category, name, description, material, price, image_url, url} = Astro.props;
---

<div class="collection-container">
    <div class="collection-image">
        <img
            class="rounded-2xl" 
            src={image_url} 
            alt="" 
            draggable="false"
        >
    </div>
    <div class="collection-text ">
        <p class="text-gold-1 font-bold">{category.toUpperCase()}</p>
        <h3 class="text-xl font-bold">{name}</h3>
        <p class="text-light-gray">{description}</p>
        <div class="collection-details flex justify-between items-center">
            <p class="price font-bold text-xl">S/ {price}</p>
            <a href={url} class="bg-gold-1 px-4 py-2 rounded-lg text-[#f8f8f8]">
                Ver Detalles
            </a>
        </div>
    </div>
</div>